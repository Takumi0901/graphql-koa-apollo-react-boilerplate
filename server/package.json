    "prettier": "^1.11.1",
    "request": "^2.88.0",
    "sinon": "^4.4.8",
    "supertest": "^3.0.0",
    "tsc-watch": "^1.0.17",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.3333"
  },
  "engines": {
    "node": ">=11.1.0"
  },
