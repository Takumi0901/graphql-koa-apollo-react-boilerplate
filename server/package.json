    "@types/async": "^2.0.48",
    "@types/bcryptjs": "^2.4.1",
    "@types/chai": "^4.1.2",
    "@types/graphql": "^14.0.7",
    "@types/joi": "^13.0.7",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/knex": "^0.14.9",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.27",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.0",
    "@types/node-fetch": "^2.3.2",
    "@types/pino": "^4.7.1",
    "@types/sinon": "^4.3.0",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.4",
    "chai": "^4.1.2",
    "husky": "^0.15.0-rc.13",
    "mocha": "^5.0.5",
